{
  "manifest_version": 3,
  "name": "Pop-up Reminder",
  "version": "0.0.3",
  "description": "Adds a pop-up reminder to remind me something.",
  "browser_specific_settings": {
    "gecko": {
      "id": "pop-up-reminder@tianhegao.com"
    }
  },
  "icons": {
    "48": "logo.png"
  },
  "permissions": [
    "alarms",
    "notifications"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "browser_style": true,
    "default_icon": "logo.png"
  }
}